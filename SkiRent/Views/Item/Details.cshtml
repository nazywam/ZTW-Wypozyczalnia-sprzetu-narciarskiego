@model SkiRent.ViewModels.Item.ItemDetailViewModel
@{
	ViewBag.Title = "title";
}

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.ID)
	<ul class="list-group">
		<li class="list-group-item cbg-blue text-white">
			<div class="row">
				<div class="col-md-7">
					<h2>
						[[[Item information]]]
					</h2>
				</div>
				<div class="col-md-5  text-right">
					<a href="@Url.Action("Edit", new {id = Model.ID})" class="btn btn-light icon-link">
						<i class="far fa-edit mr-2"></i>[[[Edit]]]
					</a>
					<a href="@Url.Action("Delete", new {id = Model.ID})" class="btn btn-light">
						<i class="far fa-trash-alt mr-2"></i>[[[Delete]]]
					</a>
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="form-group row">
				<label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Manufacturer)</label>
				<div class="col-sm-4">
					@Html.TextBoxFor(model => model.Manufacturer, new {@readonly= true, @class = "form-control " })
				</div>

				<label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.ModelName)</label>
				<div class="col-sm-4">
					@Html.TextBoxFor(model => model.ModelName, new { @readonly = true, @class = "form-control "})
				</div>
			</div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Size)</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Size, new { @readonly = true, @class = "form-control "})
                </div>

                <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Category)</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Category.Name, new { @readonly = true, @class = "form-control "})
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Barcode)</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Barcode, new { @readonly = true, @class = "form-control "})
                </div>
            </div>
		</li>
	</ul>

}
